{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
     "rules": "firestore.rules",
     "indexes": "firestore.indexes.json"
    },
    "storage": {
     "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 8020
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  }
}